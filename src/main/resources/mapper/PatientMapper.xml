<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.qy.mapper.PatientMapper">
    <insert id="insert">
        insert into patient values(#{name},#{age},#{sex},0,#{username},'未预约');
    </insert>
    <insert id="insertpatientdoctor">
        insert into patientDoctor set patientName=#{patient.get}
    </insert>
    <update id="updatePatient">
        update patient set numberTime=#{numberTime} where name=#{name};
    </update>
    <select id="findByName" resultType="com.qy.domain.Patient">
        select * from patient where name=#{name};
    </select>
    <select id="findByUsername" resultType="com.qy.domain.Patient">
        select * from patient where username=#{username};
    </select>
</mapper>